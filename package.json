{
  "name": "react-gradient-color-picker-ts",
  "version": "3.1.0",
  "description": "An easy to use color/gradient picker for React.js",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "esm",
    "src"
  ],
  "scripts": {
    "lib:cjs": "tsc -p tsconfig.json --target ES5 --module commonjs --outDir lib",
    "lib:esm": "tsc -p tsconfig.json --target ES5 --module ESNext --outDir esm",
    "build": "run-p lib:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justjavac/react-gradient-color-picker-ts.git"
  },
  "keywords": [
    "gradient",
    "react",
    "color",
    "picker",
    "react.js",
    "tool",
    "editor"
  ],
  "author": {
    "name": "Harry Fox",
    "email": "hxfox1@gmail.com"
  },
  "peerDependencies": {
    "react": "^16.3.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.7",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/tinycolor2": "^1.4.3",
    "@types/uuid": "^8.3.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.2"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justjavac/react-gradient-color-picker-ts/issues"
  },
  "homepage": "https://github.com/justjavac/react-gradient-color-picker-ts#readme",
  "dependencies": {
    "html2canvas": "^1.4.1",
    "lodash.throttle": "^4.1.1",
    "tinycolor2": "^1.4.2",
    "uuid": "^8.3.2"
  }
}
